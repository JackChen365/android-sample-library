<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sampleFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/sample_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:elevation="@dimen/sample_toolbar_elevation"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:theme="@style/AppTheme.AppBarOverlay"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sample_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sample_activity_horizontal_margin"
            android:layout_marginRight="@dimen/sample_activity_horizontal_margin"
            android:layout_marginTop="@dimen/sample_activity_vertical_margin"
            android:layout_marginBottom="@dimen/sample_activity_vertical_margin" />
    </LinearLayout>

</FrameLayout>